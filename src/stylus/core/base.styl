// Main Elements (easy normalize)
//////////////////////////////////////////////////////
//////////////////////////////////////////////////////
//////////////////////////////////////////////////////

// @media all {}

html
  -webkit-text-size-adjust none
  min-height 100%

body
  min-height 100%
  color $color.text
  background $color.white
  margin 0
  padding 0
  quotes "\00ab" "\00bb"

  // Normal text
  $text($font-family.sans, $font-size.small, $font-weight.sans.regular)

  overflow-x hidden // not scrolling horizontal body
  backface-visibility hidden
  webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  ::selection
    background transparentify($color.second, $color.second, 0.5)


// No outline on focus controls!!!
button,
input,
textarea,
a
  outline none !important

  &:hover,
  &:active,
  &:focus
    outline: none !important


// All blocks to border-box!!!
main,
article,
aside,
figure,
address
section,
div,
form,
fieldset,
input,
select,
button,
a
  box-sizing border-box


// Links
a
  text-decoration none
  $link-color($color.link, $color.link-hover)


// Buttons

button
  cursor pointer
  border none
  border-radius $border.radius.large
  padding $btn.padding.base.vertical $btn.padding.base.horizontal
  $btn-color($color.white, $color.primary)
  $text($font-family.sans, $font-size.normal, $font-weight.sans.regular)


// Controls

input
textarea
  border 1px solid $color.border
  border-radius $border.radius.small
  padding 0 ($gutter / 2)
  $text($font-family.sans, $font-size.normal, $font-weight.sans.regular)

input
  height $input.height;

textarea
  display: block
  resize: none


// Lists
ul
  list-style-type none
  padding-left 0
  margin 0

  // For classic style
  // &.list-style
  //   @extends $list-style


// Sections
main,
article,
aside,
figure,
address,
div,
form,
fieldset
  margin 0
  padding 0


// Others

fieldset
iframe
  border-width 0


// stylelint-enable no-descending-specificity
// stylelint-disable

// WebKit Scrollbar
//////////////////////////////////////////////////////

/* Let's get this party started */
::-webkit-scrollbar
    width $gutter / 2

/* Track */
::-webkit-scrollbar-track
    background $color.primary

/* Handle */
::-webkit-scrollbar-thumb
    background: $color.text

// Customize Placeholder
//////////////////////////////////////////////////////

::-webkit-input-placeholder
  color $color.placeholder !important
::-moz-placeholder
  color $color.placeholder !important /* Firefox 19+ */
:-moz-placeholder
  color $color.placeholder !important /* Firefox 18- */
:-ms-input-placeholder
  color: $color.placeholder !important

:focus::-webkit-input-placeholder
  color transparent
:focus::-moz-placeholder
  color transparent
:focus:-moz-placeholder
  color transparent
:focus:-ms-input-placeholder
  color transparent
